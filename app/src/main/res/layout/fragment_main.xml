<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bright_cyan_two"
    android:text="Patient Details"
    android:padding="23dp"
    style="@style/Bold21White"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:padding="23dp">

    <TextView
        style="@style/Bold19Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/mainFragName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Reg15Black"
        android:padding="10dp"
        android:backgroundTint="@color/grey"/>

    <TextView
        style="@style/Bold19Black"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email" />

    <TextView
        android:id="@+id/mainFragEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Reg15Black"
        android:padding="10dp"
        android:backgroundTint="@color/grey"/>

</LinearLayout>

<TextView
    android:id="@+id/mainFragLogoutBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@color/bright_cyan_two"
    android:text="Log out"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp"
    style="@style/Bold23White"
    android:layout_margin="23dp"/>

</LinearLayout>