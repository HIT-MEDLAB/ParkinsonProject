<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3707171"
    android:layoutDirection="rtl"
    android:paddingHorizontal="23dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/Bold23White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_light_green_top_corners"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:shadowColor="@color/gray_black"
            android:text="דיווח חדש"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_light_green_stroke_borrom_cornners"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="23dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingHorizontal="10dp">


                <RadioGroup
                    android:id="@+id/reportRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/notificationOnBtn"
                        style="@style/SemiBold17Black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_light_green_stroke"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="On" />

                    <RadioButton
                        android:id="@+id/notificationDyskinesiaBtn"
                        style="@style/SemiBold17Black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_light_green_stroke"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="דסקנזיה" />

                    <RadioButton
                        android:id="@+id/notificationOffBtn"
                        style="@style/SemiBold17Black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_light_green_stroke"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Off" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:alpha="0.3"
                android:background="#9BA59D" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="15dp">

                    <CheckBox
                        android:id="@+id/notificationHallucinationsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center"
                        android:padding="5dp" />

                    <TextView
                        style="@style/SemiBold19Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="הזיות  " />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="10dp">

                    <CheckBox
                        android:id="@+id/notificationFallsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center"
                        android:padding="5dp" />

                    <TextView
                        style="@style/SemiBold19Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="נפילות" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/notificationReportBtn"
                style="@style/Bold21White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_rectangle_blue"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:text="שלח דיווח" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>